{
  "name": "minivaline",
  "version": "1.2.7",
  "description": "A simple comment system based on Leancloud.",
  "main": "/dist/MiniValine.min.js",
  "author": {
    "name": "MHuiG",
    "url": "https://github.com/MHuiG",
    "email": "i@mail.com"
  },
  "scripts": {
    "test": "jest",
    "build": "webpack",
    "dev": "node_modules/.bin/webpack-dev-server --colors --hot --inline",
    "clear": "rm -rf dist/* ",
    "check": "eslint src",
    "format": "eslint src --fix",
    "cover": "jest --coverage",
	"coveralls": "npm run cover --report && cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [
    "MiniValine",
    "Simple Comment",
    "Comment System",
    "Based on Leancloud",
    "Minimalist"
  ],
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MHuiG/MiniValine.git"
  },
  "bugs": {
    "url": "https://github.com/MHuiG/MiniValine/issues"
  },
  "homepage": "https://github.com/MHuiG/MiniValine#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "autoprefixer": "^7.1.1",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.9",
    "css-loader": "^0.28.4",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "exports-loader": "^0.6.4",
    "file-loader": "^0.11.2",
    "jest": "^25.1.0",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.7.0",
    "webpack-dev-server": "^2.7.1"
  },
  "dependencies": {
    "babel-jest": "^25.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "blueimp-md5": "^2.8.0",
    "highlight.js": "^9.18.1",
    "lazysizes": "^5.2.0",
    "marked": "^0.6.1",
    "node-polyglot": "^2.2.2",
    "source-map": "^0.5.6",
    "string-format": "^2.0.0",
    "xss": "^1.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|styl)$": "<rootDir>/src/__mocks__/style.js",
      "^!!raw-loader": "<rootDir>/src/__mocks__/text.js"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "src/MiniValine.js",
      "src/fun",
      "src/i18n",
      "src/utils"
    ],
    "globals": {
      "VERSION": "1.0.0-test"
    }
  }
}
